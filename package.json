{
  "name": "clean-node-api",
  "version": "1.0.0",
  "description": "API em NodeJS com Clean Architecture e TDD",
  "main": "src/main/index.js",
  "private": true,
  "scripts": {
    "start": "node src/main/index.js",
    "test": "jest --colors --silent --noStackTrace --passWithNoTests --runInBand --detectOpenHandles",
    "test:unit": "npm test -- --watch -c jest-unit-config.js",
    "test:integration": "npm test -- --watch -c jest-integration-config.js",
    "test:staged": "npm test -- --silent",
    "test:ci": "npm test -- --coverage --silent",
    "postinstall": "husky install"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rlinsdev/clean-node-api.git"
  },
  "author": "Rodrigo Lins",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rlinsdev/clean-node-api/issues"
  },
  "standard": {
    "env": [
      "jest"
    ]
  },
  "homepage": "https://github.com/rlinsdev/clean-node-api#readme",
  "devDependencies": {
    "@shelf/jest-mongodb": "^1.2.3",
    "husky": "^5.0.9",
    "jest": "^26.6.3",
    "lint-staged": "^10.5.4",
    "prettier": "^2.2.1",
    "standard": "^16.0.3",
    "supertest": "^6.1.3",
    "ts-node": "^9.1.1",
    "typescript": "^4.1.3"
  },
  "dependencies": {
    "bcrypt": "^5.0.0",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "mongodb": "^3.6.4",
    "validator": "^13.5.2"
  }
}
